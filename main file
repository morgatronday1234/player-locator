pl = peripheral.wrap("back")
name = "UserDimensions"

while(true)
do
 event, key = os.pullEvent("key")

 if (keys.getName(key) == "r")
 then
  term.clear()
  term.setCursorPos(1, 1)
  pos = pl.getPlayerPos(name)
  print("X: "..pos.x.."\nY: "..pos.y.."\nZ: "..pos.z.."\nHealth: "..pos.health.."/"..pos.maxHealth)
  
 end
end
